\selectcolormodel{rgb}
\mode<presentation>

% custom colors
% http://www.colorsontheweb.com/colorwizard.asp#wizard, used start set: #535967
% 535967 (mittel) 
% 0e0f12 (schwarz)
% a0a5b2 (hell) 
% 5d5d5d (gray)   
% cd995d (orange, hell) 
% F79C32 (orange, mittel) 
% FF7e00 (orange, stark) 
% FFBD00 (orange, gelblich) 
 
\definecolor{i6colorscheme1}{HTML}{535967}  %  e.g. for headline background
\definecolor{i6colorscheme2}{HTML}{0e0f12}  %  e.g. title in headline
\definecolor{i6colorscheme3}{HTML}{a0a5b2}  %  e.g. for poster background
\definecolor{i6colorscheme4}{HTML}{5d5d5d}  %  e.g. for block background
\definecolor{i6colorscheme5}{HTML}{FFFFFF}  %  e.g. title in headline, separation lines
\definecolor{i6colorscheme6}{HTML}{535967}  %  e.g. for alert

  
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=i6colorscheme1}
\setbeamercolor{title in headline}{fg=i6colorscheme5}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=i6colorscheme3}
\setbeamercolor{logo in headline}{fg=black,bg=i6colorscheme3}

% lines
%\setbeamercolor{upper separation line head}{fg=ta2orange}
\setbeamercolor{separation line}{bg=i6colorscheme5}

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=i6colorscheme1}
\setbeamerfont{footline}{fg=white,size=\normalsize}

% poster background, body colors, and fonts
\setbeamercolor*{normal text}{fg=black,bg=i6colorscheme3}

% block environment
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=i6colorscheme5,bg=i6colorscheme1}
\setbeamerfont{block title}{size=\large,series=\bf}

% example environment
\setbeamercolor*{example title}{fg=white,bg=i6colorscheme1}
\setbeamerfont{example title}{size=\large,series=\bf,bg=i6colorscheme1,fg=white}

%\setbeamercolor*{example body}{fg=white,bg=i6colorscheme4}
%\setbeamercolor*{example title}{fg=white,bg=i6colorscheme1}

%  \setbeamercolor{framesubtitle}{fg=ta3orange, bg=ta2gray}
%  \setbeamercolor{author in head/foot}{fg=tabutter, bg=black}
%  \setbeamercolor{title in head/foot}{bg=tabutter, fg=black}

\setbeamercolor{alerted text}{fg=i6colorscheme6}

%\setbeamercolor{example text}{fg=taorange}
%\setbeamercolor{structure}{fg=ta3skyblue}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[ht=3ex,dp=1ex,center,rounded=false,shadow=false,leftskip=1cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=false,shadow=false,leftskip=1cm,colsep*=.75ex,sep=2ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.25\paperwidth}
        \vskip2ex
        \raggedleft
        \includegraphics[width=.9\linewidth,keepaspectratio]{deselaers/logos/rwthaachenuniversity-whitegray}
        \vskip1ex
        \includegraphics[height=7.5cm,width=.9\linewidth,keepaspectratio]{images/boston_univ_cmyk}
        \vskip1ex
        \includegraphics[height=7.5cm,width=.9\linewidth,keepaspectratio]{images/full_2color_ss}\\[1ex]
        \vskip1ex
      \end{column}
      \begin{column}{.05\paperwidth}
      \end{column}
      \begin{column}{.75\paperwidth}
        \hskip2ex
        \vskip4ex
        \raggedright
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[1ex]}
        \usebeamercolor{author in headline}{\color{fg}\Large{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\Large{\insertinstitute}\\[1ex]}     
      \end{column}

    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

